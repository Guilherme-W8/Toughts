<div class="home-header">
    {{#if search}}
    <h1>Buscando por: <span>{{search}}</span></h1>

    {{#if quantityToughts}}
    <p><span>{{quantityToughts}}</span> pensamentos encontrados para <span>"{{search}}"</span></p>
    {{else}}
    <p>Nenhum pensamento encontrado para <span>"{{search}}"</span></p>
    {{/if}}

    {{else}}
    <h1>Feed global de <span>pensamentos</span></h1>
    {{/if}}

    <form action="/" method="GET">
        <input type="text" name="search" placeholder="Busque por pensamentos semelhantes">
        <input type="submit" class="btn" value="Buscar">
    </form>

    <div class="order-container">
        <span>Ordernar por</span>

        <form action="/" method="POST">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>

        <form action="/" method="POST">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>

        <a href="/">Limpar filtro</a>
    </div>
</div>

<div class="toughts-container">
    {{#each toughts}}
    <figure>
        <blockquote>"{{this.title}}"</blockquote>
        <figcaption>Inclu√≠do por <span>{{this.User.name}}</span></figcaption>
    </figure>
    {{/each}}
</div>